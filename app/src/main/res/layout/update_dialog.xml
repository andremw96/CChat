<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pesan" />

    <EditText
        android:id="@+id/edit_pesan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Isikan Pesan.." />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password" />

    <EditText
        android:id="@+id/edit_kunci"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password..."
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/edit_kunci_private"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Kunci..."
        android:inputType="textPassword"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textViewKunciPublikReceiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btn_dekrip_pesan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-30dp"
        android:text="Dekripsi" />

    <EditText
        android:id="@+id/txtPesanTerdekripsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:textColor="@android:color/holo_red_dark" />

</LinearLayout>